<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#1a1a1a"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".FileChooser">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First turn on the hotspot of Phone having Master App (the other app) and connect this phone's wifi with that hotspot (No need to turn on the internet)"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="20dp"
        />

    <TextView
        android:layout_marginTop="62dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Now select the video file and enter the ip adress and port number
 shown on this phone on the Master App"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="20dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="400dp">


        <Button
            android:id="@+id/buttonchoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Standard size Video File"
            android:layout_gravity="center"
            />



    </LinearLayout>





</LinearLayout>